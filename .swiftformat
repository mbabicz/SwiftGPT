# SwiftFormat configuration
--swiftversion 5.9

# Indentation
--indent 4
--tabwidth 4
--maxwidth 160

# Wrapping
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first

# Spacing
--trimwhitespace always
--commas inline

# Header
--header "//\n//  {file}\n//  SwiftGPT\n//"

# Rules
--disable redundantSelf
--enable isEmpty
--enable sortedImports
--enable blankLinesAtEndOfScope
--enable blankLinesAtStartOfScope

# Excluded files
--exclude Resources/Localizables/Strings+Generated.swift
--exclude .build
--exclude DerivedData